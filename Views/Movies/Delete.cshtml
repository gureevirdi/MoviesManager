@model MoviesManager.Models.Movie

<h2>Delete Movie</h2>

<p>Are you sure you want to delete this movie?</p>

<div>
    <strong>Title:</strong> @Model.Title <br />
    <strong>Director:</strong> @Model.Director <br />
    <strong>Genre:</strong> @Model.Genre <br />
    <strong>Year:</strong> @Model.Year <br />
    <strong>Rating:</strong> @Model.Rating
</div>

<br />

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
